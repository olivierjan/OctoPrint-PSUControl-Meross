<!-- ko ifnot: settings.plugins.psucontrol -->
<span class="help-inline label label-important">This plugin requires <a href="https://plugins.octoprint.org/plugins/psucontrol/" target="_blank">PSU Control</a> in order to function. It can be installed from the Plugin Manager.</span>
<!-- /ko -->

<form class="form-horizontal">
    <h4>General</h4>
    <div class="control-group">
        <label class="control-label">User Name</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.octoprint_psucontrol_meross.username" placeholder="EMAIL ADDRESS">
        </div>
        <label class="control-label">Password</label>
        <div class="controls">
            <input type="password" class="input" data-bind="value: settings.plugins.octoprint_psucontrol_meross.password" placeholder="PASSWORD">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Plug</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini" data-bind="value: settings.plugins.octoprint_psucontrol_meross.plug">
            <br/>
            <span class="help-inline">For single plug devices leave zero</span>
        </div>
    </div>
</form>
